<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/finance_bkg" >
    
    <TextView
		android:id="@+id/portfolioReferenceTextView"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="5dp"
    	android:orientation="horizontal">
    	<TextView
			android:id="@+id/capitalGainText_TV"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#000000"
        	android:text="Guadagno Percentuale"/>
    	<TextView
			android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#000000"
        	android:text=": "/>
        <TextView
            android:id="@+id/capitalGainValue_TV"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#000000"
        	android:text="0.00"/>	
	</LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="5dp"
    	android:orientation="horizontal">
        <TextView
            android:id="@+id/portfolioLastUpdate_TV"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#000000"
        	android:text="Last Update: "/>
       	<TextView
       	    android:id="@+id/portfolioLastUpdate"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#000000"
        	android:text="12/21/2012 12:34 def"/>
    </LinearLayout>
    
    <View
        android:layout_height="2dip"
       	android:layout_width="fill_parent"
       	android:background="#FF909090" />

    <TextView
        android:id="@+id/addTitle_TV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="Click Menu to add a new Bond, Fund or Share" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="5dp"
    		android:weightSum="14">
    	    <TableRow>

    	        <TextView
    	            android:id="@+id/nameCol"
    	            android:layout_width="0dp"
    	            android:layout_height="wrap_content"
    	            android:textSize="15dp"
    	            android:text="Isin"
    	            android:textColor="#000000"
        			android:gravity="center_horizontal"
                	android:layout_weight="4"
    	            android:textStyle="bold" />
    	        <TextView               
                	android:id="@+id/dateCol"
                	android:layout_width="0dp"
                	android:layout_height="wrap_content"                
                	android:textSize="15dp"
                	android:textStyle="bold" 
                	android:textColor="#000000"
        			android:gravity="center_horizontal"
                	android:layout_weight="3"
    	            android:text="Date"/>
				
        		<TextView               
                	android:id="@+id/percVarCol"
                	android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:textSize="15dp"
                	android:textStyle="bold" 
                	android:gravity="center_horizontal"
                	android:textColor="#000000"
        			android:layout_weight="2"
    	            android:text="Var%"/>
        		<TextView 
        		    android:id="@+id/priceCol"
                	android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:textSize="15dp"
                	android:textStyle="bold" 
                	android:gravity="center_horizontal"
                	android:textColor="#000000"
        			android:layout_weight="3"
    	            android:text="Price"/>
        		<TextView 
        		    android:id="@+id/cgCol"
                	android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:textSize="15dp"
                	android:textStyle="bold" 
                	android:gravity="center_horizontal"
                	android:textColor="#000000"
        			android:layout_weight="2"
    	            android:text="CG%"/>
    		</TableRow>
		</TableLayout>
		
    <TableLayout
        android:id="@+id/dynamic_tools_table"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="5dp"
    	android:weightSum="14">
    </TableLayout>
    
</LinearLayout>